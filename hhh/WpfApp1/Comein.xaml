<Window x:Class="WpfApp1.Comein"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в профиль - China Trade Manager" 
        Height="982" 
        Width="1512"
        MinHeight="982" 
        MinWidth="1512"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid>
        <!-- Центральная карточка -->
        <Border Background="#FF171A1F"
                BorderBrush="#FF5E5E5E"
                BorderThickness="1"
                CornerRadius="4"
                Width="500"
                Height="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="40">
                <!-- Иконка профиля -->
                <TextBlock Text="👤"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Заголовок -->
                <TextBlock Text="Войдите в профиль"
                           Foreground="#FFCACACA"
                           FontSize="28"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Пояснительный текст -->
                <TextBlock Text="Для доступа к вашему аккаунту и всем функциям приложения"
                           Foreground="#FFCACACA"
                           FontSize="16"
                           FontFamily="Segoe UI"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Width="350"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,60"/>

                <!-- Кнопка входа -->
                <Button Content="Войти в профиль"
                        Background="#FFAB816A"
                        Foreground="White"
                        FontSize="18"
                        FontFamily="Segoe UI"
                        FontWeight="Medium"
                        Height="50"
                        Width="250"
                        HorizontalAlignment="Center"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFC49A84"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Текст под кнопкой -->
                <TextBlock Text="После входа вы попадете в свой профиль"
                           Foreground="#FF5E5E5E"
                           FontSize="14"
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Кнопка "Назад" или "Закрыть" -->
        <Button Content="×"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="#FFCACACA"
                FontSize="36"
                FontFamily="Segoe UI"
                Height="50"
                Width="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>