<Window x:Class="WpfApp1.Registration2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China Trade Manager - Регистрация" 
        MinHeight="982" MinWidth="1512"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF1E1E1E">

        <Viewbox Stretch="Uniform">

            <!-- Центральный контейнер -->
            <Grid Width="1512" Height="982" Background="Black">

                <!-- Заголовок "Регистрация" -->
                <TextBlock HorizontalAlignment="Center" 
                          Height="90" 
                          Margin="0,25,0,0" 
                          TextWrapping="Wrap" 
                          VerticalAlignment="Top" 
                          Width="424"
                          Foreground="White" 
                          FontSize="48"
                          FontFamily="Segoe UI"
                          TextAlignment="Center">
                    <Run Language="ru-ru" Text="Регистрация"/>
                </TextBlock>

                <!-- Поле "Имя" -->
                <TextBlock HorizontalAlignment="Left" 
                          Height="46" 
                          Margin="385,154,0,0" 
                          TextWrapping="Wrap" 
                          VerticalAlignment="Top" 
                          Width="100"
                          Foreground="#FFCACACA" 
                          FontSize="36"
                          Text="Имя"
                          FontFamily="Segoe UI"/>

                <!-- Поле для ввода Имя -->
                <TextBox x:Name="txtFirstName" 
                        HorizontalAlignment="Center" 
                        Height="78"
                        Margin="0,206,0,0" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        Width="742"
                        Background="#FF2D2D2D"
                        Foreground="#FFCACACA"
                        FontSize="24"
                        BorderBrush="#FF5E5E5E"
                        BorderThickness="1"
                        Padding="10,0,0,0"
                        Text="Ваше Имя"
                        FontFamily="Segoe UI"/>

                <!-- Поле "Фамилия" -->
                <TextBlock HorizontalAlignment="Left" 
                          Height="46" 
                          Margin="385,299,0,0" 
                          TextWrapping="Wrap" 
                          VerticalAlignment="Top" 
                          Width="154"
                          Foreground="#FFCACACA" 
                          FontSize="36"
                          FontFamily="Segoe UI">
                    <Run Language="ru-ru" Text="Фамилия"/>
                </TextBlock>

                <!-- Поле для ввода Фамилия -->
                <TextBox x:Name="txtLastName" 
                        HorizontalAlignment="Center" 
                        Height="78"
                        Margin="0,352,0,0" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        Width="742"
                        Background="#FF2D2D2D"
                        Foreground="#FFCACACA"
                        FontSize="24"
                        BorderBrush="#FF5E5E5E"
                        BorderThickness="1"
                        Padding="10,0,0,0"
                        Text="Ваша Фамилия"
                        FontFamily="Segoe UI"/>

                <!-- Поле "Электронная почта" -->
                <TextBlock HorizontalAlignment="Left" 
                          Height="46" 
                          Margin="385,450,0,0" 
                          TextWrapping="Wrap" 
                          VerticalAlignment="Top" 
                          Width="321"
                          Foreground="#FFCACACA" 
                          FontSize="36"
                          FontFamily="Segoe UI">
                    <Run Language="ru-ru" Text="Электронная почта"/>
                </TextBlock>

                <!-- Поле для ввода Электронная почта -->
                <TextBox x:Name="txtEmail" 
                        HorizontalAlignment="Center" 
                        Height="77"
                        Margin="0,503,0,0" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        Width="742"
                        Background="#FF2D2D2D"
                        Foreground="#FFCACACA"
                        FontSize="24"
                        BorderBrush="#FF5E5E5E"
                        BorderThickness="1"
                        Padding="10,0,0,0"
                        Text="Ваша электронная почта"
                        FontFamily="Segoe UI"/>

                <!-- Поле "Номер телефона" -->
                <TextBlock HorizontalAlignment="Left" 
                          Height="46" 
                          Margin="385,600,0,0" 
                          TextWrapping="Wrap" 
                          VerticalAlignment="Top" 
                          Width="285"
                          Foreground="#FFCACACA" 
                          FontSize="36"
                          FontFamily="Segoe UI">
                    <Run Language="ru-ru" Text="Номер телефона"/>
                </TextBlock>

                <!-- Поле для ввода Номер телефона -->
                <TextBox x:Name="txtPhone" 
                        HorizontalAlignment="Center" 
                        Height="78"
                        Margin="0,652,0,0" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        Width="742"
                        Background="#FF2D2D2D"
                        Foreground="#FFCACACA"
                        FontSize="24"
                        BorderBrush="#FF5E5E5E"
                        BorderThickness="1"
                        Padding="10,0,0,0"
                        Text="Ваш номер телефона"
                        FontFamily="Segoe UI"/>

                <!-- Кнопка "Зарегистрироваться" -->
                <Button x:Name="btnRegister" 
                        HorizontalAlignment="Center" 
                        Height="77"
                        Margin="0,773,0,0" 
                        VerticalAlignment="Top" 
                        Width="462"
                        Background="#FFAB816A"
                        Foreground="White"
                        FontSize="40"
                        FontFamily="Segoe UI"
                        Content="Зарегистрироваться"
                        BorderThickness="0"
                        Cursor="Hand" Click="btnRegister_Click"/>

            </Grid>

        </Viewbox>
        <Button Content="ChinaTradeDB&#xA;" 
            Background="Black" 
            Foreground="#FFAB816A" 
            BorderBrush="#FF171A1F" 
            FontSize="30"
            VerticalAlignment="Top" 
            Margin="0,10,1289,0" 
            Click="Button_Click_1"/>

    </Grid>
</Window>