<Window x:Class="WpfApp1.Registration2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China Trade Manager - Регистрация" Height="982" Width="1512"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="Black">

        <!-- Заголовок "Регистрация" -->

        <!-- Поле "Имя" -->
        <TextBlock HorizontalAlignment="Left" 
                   Height="46" 
                   Margin="385,154,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Width="100"
                   Foreground="#FFCACACA" 
                   FontSize="36"
                   Text="Имя"
                   FontFamily="Segoe UI" Background="Black"/>

        <!-- Поле "Фамилия" -->

        <!-- Поле "Электронная почта" -->

        <!-- Поле "Номер телефона" -->

        <!-- Кнопка "Зарегистрироваться" -->
        <TextBlock HorizontalAlignment="Center" 
            Height="90" 
            Margin="0,25,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="424"
            Foreground="White" 
            FontSize="48"
            FontFamily="Segoe UI"
            TextAlignment="Center"><Run Language="ru-ru" Text="Регистрация"/></TextBlock>
        <TextBox x:Name="txtLogin" 
            HorizontalAlignment="Center" 
            Height="78"
            Margin="0,206,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="742"
            Background="#FF2D2D2D"
            Foreground="#4E4E4E"
            FontSize="24"
            BorderBrush="#FF5E5E5E"
            BorderThickness="1"
            Padding="10,0,0,0"
            Text="Ваше Имя"
            FontFamily="Segoe UI"/>
        <TextBlock HorizontalAlignment="Left" 
            Height="46" 
            Margin="385,299,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="154"
            Foreground="#FFCACACA" 
            FontSize="36"
            FontFamily="Segoe UI" Background="Black"><Run Language="ru-ru" Text="Фамилия"/></TextBlock>
        <TextBox x:Name="txtLogin_Копировать" 
            HorizontalAlignment="Center" 
            Height="78"
            Margin="0,352,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="742"
            Background="#FF2D2D2D"
            Foreground="#4E4E4E"
            FontSize="24"
            BorderBrush="#FF5E5E5E"
            BorderThickness="1"
            Padding="10,0,0,0"
            Text="Ваша Фамилия"
            FontFamily="Segoe UI"/>
        <TextBlock HorizontalAlignment="Left" 
            Height="46" 
            Margin="385,450,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="321"
            Foreground="#FFCACACA" 
            FontSize="36"
            FontFamily="Segoe UI" Background="Black"><Run Language="ru-ru" Text="Электронная почта"/></TextBlock>
        <TextBox x:Name="txtLogin_Копировать1" 
            HorizontalAlignment="Center" 
            Height="77"
            Margin="0,503,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="742"
            Background="#FF2D2D2D"
            Foreground="#4E4E4E"
            FontSize="24"
            BorderBrush="#FF5E5E5E"
            BorderThickness="1"
            Padding="10,0,0,0"
            Text="Ваша электронная почта"
            FontFamily="Segoe UI"/>
        <TextBlock HorizontalAlignment="Left" 
            Height="46" 
            Margin="385,600,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="285"
            Foreground="#CACACA" 
            FontSize="36"
            FontFamily="Segoe UI" Background="Black"><Run Language="ru-ru" Text="Номер телефона"/></TextBlock>
        <TextBox x:Name="txtLogin_Копировать2" 
            HorizontalAlignment="Center" 
            Height="78"
            Margin="0,652,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="742"
            Background="#FF2D2D2D"
            Foreground="#4E4E4E"
            FontSize="24"
            BorderBrush="#FF5E5E5E"
            BorderThickness="1"
            Padding="10,0,0,0"
            Text="Ваш номер телефона"
            FontFamily="Segoe UI"/>
        <Button x:Name="btnRegister_Копировать" 
            HorizontalAlignment="Center" 
            Height="77"
            Margin="0,773,0,0" 
            VerticalAlignment="Top" 
            Width="462"
            Background="#FFAB816A"
            Foreground="#FF2D2D2D"
            FontSize="40"
            FontFamily="Segoe UI"
            Content="Зарегистрироваться"
            BorderThickness="1"
            Cursor="Hand"/>

    </Grid>
</Window>
