<Window x:Class="WpfApp1.BasketGood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China Trade Manager - Заказ оформлен" Height="982" Width="1512"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Background="#FF1E1E1E">

        <!-- Верхняя панель -->
        <Border Background="#FF171A1F" 
                Height="60" 
                VerticalAlignment="Top"
                BorderBrush="#FF5E5E5E"
                BorderThickness="0,0,0,1">

            <TextBlock Text="# Заказ оформлен" 
                      Foreground="White" 
                      FontSize="20"
                      FontFamily="Segoe UI"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="40,0,0,0"/>
        </Border>

        <!-- Основной контент -->
        <Grid Background="Black">

            <!-- Центральный блок -->
            <Border Background="#FF171A1F" 
                    BorderBrush="#FF5E5E5E" 
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="792"
                    Height="423"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                <StackPanel Margin="40" HorizontalAlignment="Center">

                    <!-- Иконка/заголовок -->
                    <TextBlock Text="✓" 
                              Foreground="#FFAB816A" 
                              FontSize="48"
                              FontFamily="Segoe UI"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Основной заголовок -->
                    <TextBlock Text="Заказ оформлен" 
                              Foreground="White" 
                              FontSize="24"
                              FontFamily="Segoe UI"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <!-- Сообщение -->
                    <TextBlock Text="Спасибо за покупку !" 
                              Foreground="#FFCACACA" 
                              FontSize="18"
                              FontFamily="Segoe UI"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,40"/>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0">

                        <Button Content="Продолжить покупки" 
                                Background="#FFAB816A"
                                Foreground="White"
                                BorderThickness="0"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Height="45"
                                Width="200"
                                Cursor="Hand"
                                Margin="0,0,20,0"
                                FontWeight="SemiBold" Click="Button_Click"/>

                        <Button Content="Перейти к заказам" 
                                Background="Transparent"
                                Foreground="#FFAB816A"
                                BorderThickness="1"
                                BorderBrush="#FFAB816A"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Height="45"
                                Width="200"
                                Cursor="Hand"
                                FontWeight="SemiBold" Click="Button_Click_1"/>

                    </StackPanel>

                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</Window>