        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Registartion" MinHeight="982" MinWidth="1512">

            <Grid Background="Black" TextBlock.FontSize="48">

                <!-- Основной заголовок -->
                <TextBlock HorizontalAlignment="Center" 
                   Height="165" 
                   Margin="0,40,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Width="642"
                   Foreground="White" 
                   FontSize="48"
                   Text="Зарегистрируйтесь или войдите в профиль"
                   FontFamily="Segoe UI"
                   TextAlignment="Center"/>

                <!-- Поле "номер или почта" -->
                <TextBox x:Name="txtLogin" 
                HorizontalAlignment="Left" 
                Height="77"
                Margin="412,314,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="742"
                Background="#FF2D2D2D"
                Foreground="#4E4E4E"
                FontSize="24"
                BorderBrush="#FF5E5E5E"
                BorderThickness="1"
                Padding="10,0,0,0"
                Text="Ваш номер или почта"
                FontFamily="Segoe UI"/>

                <!-- Поле "пароль" -->

                <!-- Кнопка "Войти" -->

                <!-- Текст "или" -->

                <!-- Кнопка "Зарегистрироваться" -->
                <Button x:Name="btnRegister" 
                HorizontalAlignment="Left" 
                Height="77"
                Margin="552,757,0,0" 
                VerticalAlignment="Top" 
                Width="462"
                Background="#FFAB816A"
                Foreground="#FF2D2D2D"
                FontSize="40"
                FontFamily="Segoe UI"
                Content="Зарегистрироваться"
                BorderThickness="1"
                Cursor="Hand"/>
                <TextBox x:Name="txtLogin_Копировать" 
            HorizontalAlignment="Left" 
            Height="77"
            Margin="412,461,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="742"
            Background="#FF2D2D2D"
            Foreground="#4E4E4E"
            FontSize="24"
            BorderBrush="#FF5E5E5E"
            BorderThickness="1"
            Padding="10,0,0,0"
            Text="Ваш пароль"
            FontFamily="Segoe UI"/>
                <TextBlock HorizontalAlignment="Left" 
            Height="53" 
            Margin="737,682,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="92"
            Foreground="#CACACA" 
            FontSize="40"
            Text="или"
            FontFamily="Segoe UI"
            TextAlignment="Center" RenderTransformOrigin="-0.228,-0.433"/>
