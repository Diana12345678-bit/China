<Window x:Class="WpfApp1.Registrartion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China Trade Manager - Авторизация" 
        MinHeight="982" MinWidth="1512"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF1E1E1E">

        <!-- Viewbox для масштабирования всего контента -->
        <Viewbox Stretch="Uniform">

            <Grid Width="1512" Height="982" Background="Black">

                <!-- Центральный контейнер -->
                <Border Width="800" 
                        Height="600"
                        Background="#FF171A1F"
                        BorderBrush="#FF5E5E5E"
                        BorderThickness="1"
                        CornerRadius="8"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <StackPanel Margin="60">

                        <!-- Заголовок -->
                        <TextBlock Text="Зарегистрируйтесь или войдите в профиль" 
                                  Foreground="White" 
                                  FontSize="32"
                                  FontFamily="Segoe UI"
                                  TextAlignment="Center"
                                  Margin="0,0,0,40"/>

                        <!-- Поле "номер или почта" -->
                        <TextBlock Text="номер или почта" 
                                  Foreground="#FFCACACA" 
                                  FontSize="28"
                                  FontFamily="Segoe UI"
                                  Margin="0,0,0,10"/>

                        <TextBox x:Name="txtLogin" 
                                Height="70"
                                Background="#FF2D2D2D"
                                Foreground="#FFCACACA"
                                FontSize="22"
                                BorderBrush="#FF5E5E5E"
                                BorderThickness="1"
                                Padding="15,0,0,0"
                                Text="Ваш номер или почта"
                                FontFamily="Segoe UI"
                                Margin="0,0,0,30" TextChanged="txtLogin_TextChanged"/>

                        <!-- Поле "пароль" -->
                        <TextBlock Text="пароль" 
                                  Foreground="#FFCACACA" 
                                  FontSize="28"
                                  FontFamily="Segoe UI"
                                  Margin="0,0,0,10"/>

                        <TextBox x:Name="txtPassword" 
                                Height="70"
                                Background="#FF2D2D2D"
                                Foreground="#FFCACACA"
                                FontSize="22"
                                BorderBrush="#FF5E5E5E"
                                BorderThickness="1"
                                Padding="15,0,0,0"
                                Text="Ваш пароль"
                                FontFamily="Segoe UI"
                                Margin="0,0,0,40"/>

                        <!-- Кнопка "Войти" -->
                        <Button x:Name="btnLogin" 
                                Height="70"
                                Background="#FFAB816A"
                                Foreground="White"
                                FontSize="28"
                                FontFamily="Segoe UI"
                                Content="Войти"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="SemiBold"
                                Margin="0,0,0,20"/>

                        <!-- Текст "или" -->
                        <TextBlock Text="или" 
                                  Foreground="#FFCACACA" 
                                  FontSize="24"
                                  FontFamily="Segoe UI"
                                  TextAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Кнопка "Зарегистрироваться" -->
                        <Button x:Name="btnRegister" 
                                Height="70"
                                Background="Transparent"
                                Foreground="#FFAB816A"
                                FontSize="28"
                                FontFamily="Segoe UI"
                                Content="Зарегистрироваться"
                                BorderThickness="1"
                                BorderBrush="#FFAB816A"
                                Cursor="Hand"
                                FontWeight="SemiBold"/>

                    </StackPanel>
                </Border>

            </Grid>
        </Viewbox>

    </Grid>
</Window>
