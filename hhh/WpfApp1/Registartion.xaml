                <Button x:Name="btnRegister_Копировать" 
            HorizontalAlignment="Left" 
            Height="77"
            Margin="552,600,0,0" 
            VerticalAlignment="Top" 
            Width="462"
            Background="#FFAB816A"
            Foreground="#FF2D2D2D"
            FontSize="40"
            FontFamily="Segoe UI"
            Content="Войти"
            BorderThickness="1"
            Cursor="Hand"/>
            </Grid>
</Window>
