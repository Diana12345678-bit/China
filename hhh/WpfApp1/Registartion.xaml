            Height="52" 
            Margin="412,239,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="324"
            Foreground="#CACACA" 
            FontSize="40"
            FontFamily="Segoe UI"
            TextAlignment="Center" RenderTransformOrigin="-0.228,-0.433"><Run Language="ru-ru" Text="н"/><Run Text="омер или почта"/></TextBlock>
                <TextBlock HorizontalAlignment="Left" 
            Height="52" 
            Margin="412,396,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="138"
            Foreground="#CACACA" 
            FontSize="40"
            FontFamily="Segoe UI"
