<Window x:Class="WpfApp1.BasketBad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China Trade Manager - Ошибка оплаты" 
        MinHeight="982" MinWidth="1512"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF1E1E1E">

        <!-- Верхняя панель -->
        <DockPanel>
            <Border Background="Black" 
                    BorderBrush="#FF5E5E5E"
                    BorderThickness="0,0,0,1"
                    Height="60"
                    DockPanel.Dock="Top"/>

            <!-- Основной контент -->
            <Grid>
                <Viewbox Stretch="Uniform" OpacityMask="Black">

                    <!-- Центральный блок -->
                    <Border Background="#FF171A1F" 
                            BorderBrush="#FF5E5E5E" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Width="534"
                            Height="409">

                        <StackPanel Margin="40" HorizontalAlignment="Center">

                            <!-- Иконка ошибки -->
                            <TextBlock Text="✗" 
                                      Foreground="#FFAB816A" 
                                      FontSize="48"
                                      FontFamily="Segoe UI"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,20" Background="#FF171A1F"/>

                            <!-- Основной заголовок -->
                            <TextBlock Text="Ошибка !" 
                                      Foreground="White" 
                                      FontSize="24"
                                      FontFamily="Segoe UI"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>

                            <!-- Сообщение об ошибке -->
                            <TextBlock Text="Недостаточно средств" 
                                      Foreground="#FFCACACA" 
                                      FontSize="18"
                                      FontFamily="Segoe UI"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,40"/>

                            <!-- Кнопки -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0">

                                <Button Content="Повторите еще раз" 
                                        Background="#FFAB816A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        Height="45"
                                        MinWidth="200"
                                        Cursor="Hand"
                                        Margin="0,0,20,0"
                                        FontWeight="SemiBold"/>

                                <Button Content="Перейти к корзине" 
                                        Background="Transparent"
                                        Foreground="#FFAB816A"
                                        BorderThickness="1"
                                        BorderBrush="#FFAB816A"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        Height="45"
                                        MinWidth="200"
                                        Cursor="Hand"
                                        FontWeight="SemiBold"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                </Viewbox>
            </Grid>
        </DockPanel>

    </Grid>
</Window>