<Window x:Class="WpfApp1.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки - China Trade Manager" 
        Height="982" 
        Width="1512"
        MinHeight="982" 
        MinWidth="1512"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid>
        <!-- Верхняя панель -->
        <Border Background="Black" 
                BorderBrush="#FF5E5E5E"
                BorderThickness="0,0,0,1"
                Height="60"
                VerticalAlignment="Top"/>

        <!-- Заголовок -->

        <!-- Кнопка назад -->

        <!-- Основное содержимое -->
        <Border Background="#FF171A1F"
                BorderBrush="#FF5E5E5E"
                BorderThickness="1"
                CornerRadius="4"
                Width="984"
                Height="764"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="40">
                <!-- Иконка настроек -->
                <TextBlock Text="⚙️"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Основной текст -->
                <TextBlock Text="Настройки не требуются"
                           Foreground="#FFCACACA"
                           FontSize="28"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Пояснительный текст -->
                <TextBlock Text="У вас и так все хорошо работает, так что настраивать здесь нечего!"
                           Foreground="#FFCACACA"
                           FontSize="20"
                           FontFamily="Segoe UI"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Width="600"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Дополнительная информация -->
                <StackPanel>
                    <TextBlock Text="Почему все уже настроено?"
                               Foreground="#FFAB816A"
                               FontSize="18"
                               FontFamily="Segoe UI"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,0">
                        <Border Background="#FF25272B"
                                BorderBrush="#FF5E5E5E"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="20"
                                Margin="0,0,0,15">
                            <TextBlock Text="✓ Система автоматически определяет оптимальные настройки"
                                       Foreground="#FFCACACA"
                                       FontSize="16"
                                       FontFamily="Segoe UI"/>
                        </Border>

                        <Border Background="#FF25272B"
                                BorderBrush="#FF5E5E5E"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="20"
                                Margin="0,0,0,15">
                            <TextBlock Text="✓ Все параметры уже настроены для максимальной производительности"
                                       Foreground="#FFCACACA"
                                       FontSize="16"
                                       FontFamily="Segoe UI"/>
                        </Border>

                        <Border Background="#FF25272B"
                                BorderBrush="#FF5E5E5E"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="20"
                                Margin="0,0,0,0">
                            <TextBlock Text="✓ При появлении новых функций настройки появятся здесь автоматически"
                                       Foreground="#FFCACACA"
                                       FontSize="16"
                                       FontFamily="Segoe UI"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка перехода в каталог -->
                <Button Content="Перейти в каталог товаров"
                        Background="#FFAB816A"
                        Foreground="White"
                        FontSize="18"
                        FontFamily="Segoe UI"
                        FontWeight="Medium"
                        Height="50"
                        Width="300"
                        HorizontalAlignment="Center"
                        Margin="0,40,0,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CatalogButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFC49A84"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
